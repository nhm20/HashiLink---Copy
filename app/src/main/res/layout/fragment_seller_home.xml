<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Content Container -->
    <FrameLayout
        android:id="@+id/sellerFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"/>

    <!-- Bottom Navigation with Dark Theme -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface_light"
        android:elevation="12dp"
        app:itemIconTint="@color/accent_teal"
        app:itemTextColor="@color/text_primary"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/seller_bottom_nav"
        app:elevation="12dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
